- name: Add source to internal zone firewalld
  hosts: all
  become: true
  tasks:
    - name: Add source to internal zone
      ansible.posix.firewalld:
        zone: public
        service: http
        permanent: true
        state: disable
    - name: Always reload firewalld
      ansible.builtin.service:
        name: firewalld
        state: reloaded
